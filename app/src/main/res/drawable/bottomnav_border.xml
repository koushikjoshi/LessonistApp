<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:bottom="-5dp"
        android:right="-5dp"
        android:top="-5dp">
        <shape android:shape="rectangle" >

            <stroke
                android:width="2dp"
                android:color="#000000" />
            <corners
                android:topRightRadius="10dp"/>
        </shape>
    </item>

    <item
        android:bottom="-5dp"
        android:right="0dp"
        android:top="-5dp">
        <shape android:shape="rectangle" >

            <stroke
                android:width="2dp"
                android:color="#000000" />
            <corners
                android:topLeftRadius="0dp"/>
        </shape>
    </item>

    <item
        android:bottom="-5dp"
        android:right="-5dp"
        android:top="0dp">
        <shape android:shape="rectangle" >

            <stroke
                android:width="2dp"
                android:color="#000000" />
            <corners
                android:topRightRadius="10dp"
                android:topLeftRadius="10dp"/>
        </shape>
    </item>

</layer-list>